{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "skipLibCheck": true,
  },
  "files": [
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}